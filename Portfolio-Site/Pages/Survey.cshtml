@page
@model PortfolioSite.Pages.SurveyModel
@{
}


<form class="d-flex align-items-center flex-column"  method="post">
    <fieldset class="text-light">

        <!--Personal information-->

        <!--Company Input-->
        <div class="mb-3">
            <legend class="form-label">Company</legend>           
            <input class="form-control"
                    placeholder="Company"
                    asp-for="Survey.Company"                 
                    name="Company"
                    type="text"
                    value="" />
            <br />
        </div>
        <!--Position Input-->
        <div class="mb-3">
            <legend class="form-label">Position</legend>
            <input class="form-control"
                    placeholder="Position"
                    asp-for="Survey.Position"
                    name="Position"
                    type="text"
                    value="" />
            <br />
        </div>
        <!--City Input-->
        <div class="mb-3">
            <legend class="form-label">City</legend>
            <input class="form-control"
                    placeholder="City"
                    asp-for="Survey.City"
                    name="City"
                    type="text"
                    value="" />
            <br />
        </div>
        <!--Province/State Input-->
        <div class="mb-3">
            <legend class="form-label">Province/State</legend>
            <input class="form-control"
                    placeholder="Province/State"
                    asp-for="Survey.Province"
                    name="Province"
                    type="text"
                    value="" />
            <br />
        </div>
        <!--Country Input-->
        <div class="mb-3">
            <legend class="form-label">Country</legend>
            <input class="form-control"
                    placeholder="Country"
                    asp-for="Survey.Country"
                    name="Country"
                    type="text"
                    value="" />
            <br />
        </div>


        <!--intrest level Input-->
        <fieldset class="form-group">
            <legend class="form-label">Interest Level</legend>
            <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input"
                                id="very strong"
                                asp-for="Survey.Interest"
                                name="Interest"
                                type="radio"
                                value="very string" />
                        <label htmlFor="very strong">very strong</label>
                    </div>
             </div>
                <div class="form-check">
                    <input class="form-check-input"
                            id="strong"
                            asp-for="Survey.Interest"
                            name="Interest"
                            type="radio"
                            value="strong" />
                    <label htmlFor="strong">strong</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input"
                            id="neutral"
                            asp-for="Survey.Interest"
                            name="Interest"
                            type="radio"
                            value="neutral" />
                    <label htmlFor="neutral">neutral</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input"
                            id="weak"
                            asp-for="Survey.Interest"
                            name="Interest"
                            type="radio"
                            value="weak" />
                    <label htmlFor="weak">weak</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input"
                            id="very weak"
                            asp-for="Survey.Interest"
                            name="Interest"
                            type="radio"
                            value="very weak" />
                    <label htmlFor="very weak">very weak</label>
                </div>
          
        </fieldset>
        <!--Comments Input-->
        <legend class="form-lable">Comments</legend>
        <div>
            <textarea 
                placeholder="comments"
                id="Comments"
                asp-for="Survey.Comments"
                name="Comments"
                type="text"
                rows="4"
                cols="50"
                maxlength="250"
                value="">
            </textarea>
        </div>
            <!--Passsword Input-->
            <legend class="form-lable">Password</legend>
            <input class="form-control"
                    placeholder="Password"
                    asp-for="Survey.Password"
                    name="Password"
                    type="text"
                    maxlength="20"
                    value="" />
            <br />
        <input class="btn btn-primary mt-3" type="submit" value="Submit" />
    </fieldset>  
</form>
